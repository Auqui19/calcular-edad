<style>
  .display-none {
    @apply hidden;
  }
  .oculto {
    top: -60px;
  }
  .mostrar {
    top: 0;
  }
  #toggleSection {
    position: relative;
    transition: all 0.2s ease-in-out !important;
  }
</style>

<script>
  // Obtenemos clases de los elementos "☀️ y 🌙"
  const sunIcon = document.querySelector(".sun");
  const moonIcon = document.querySelector(".moon");

  // Osaremos el tema que tiene el navegador
  const userTheme = localStorage.getItem("theme");
  const systemTheme = window.matchMedia("(prefers-color-scheme: dark)").matches;

  // Creamos una función para agregar la clase a "☀️ y 🌙"
  const iconToggle = () => {
    moonIcon?.classList.toggle("display-none");
    sunIcon?.classList.toggle("display-none");
  };

  // Creamos una función para verificar el tema actual
  const themeCheck = () => {
    if (userTheme === "dark" || (!userTheme && systemTheme)) {
      document.documentElement.classList.add("dark");
      moonIcon?.classList.add("display-none");
      return;
    }
    sunIcon?.classList.add("display-none");
  };

  // Funcion para cambiar el tema
  const themeSwitch = () => {
    if (document.documentElement.classList.contains("dark")) {
      document.documentElement.classList.remove("dark");
      localStorage.setItem("theme", "light");
      iconToggle();
      return;
    }
    document.documentElement.classList.add("dark");
    localStorage.setItem("theme", "dark");
    iconToggle();
  };

  // Eventos para cambiar el tema
  sunIcon?.addEventListener("click", () => {
    themeSwitch();
  });

  moonIcon?.addEventListener("click", () => {
    themeSwitch();
  });

  // Eventos para verificar el tema
  themeCheck();
</script>
